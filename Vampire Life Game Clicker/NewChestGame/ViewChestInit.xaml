<Window x:Class="Vampire_Life_Game_Clicker.NewChestGame.ViewChestInit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vampire_Life_Game_Clicker.NewChestGame"
        mc:Ignorable="d"
        Title="ViewChestInit" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Стрелка вверх</Label>
                <Label Name="UpArrow" Height="20" Width="20"></Label>
            </StackPanel>
            <StackPanel>
                <Label>Стрелка вниз</Label>
                <Label Name="DownArrow" Height="20" Width="20"></Label>
            </StackPanel>
            <StackPanel>
                <Label>Стрелка влево</Label>
                <Label Name="LeftArrow" Height="20" Width="20"></Label>
            </StackPanel>
            <StackPanel>
                <Label>Стрелка вправо</Label>
                <Label Name="RightArrow" Height="20" Width="20"></Label>
            </StackPanel>
            <Image Name="MyImage" Width="100" Height="100"></Image>
        </StackPanel>
    </Grid>
</Window>
